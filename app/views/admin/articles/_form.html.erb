<div class="flex">
  <%= form_with model: [:admin, @article], class: "flex flex-col gap-4" do |form| %>
    <div class="flex flex-col gap-4">
      <%= form.label 'Title'%>
      <%= form.text_field :title %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'Description'%>
      <%= form.text_field :description %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.submit 'Save' %>
    </div>
  <% end %>
</div>