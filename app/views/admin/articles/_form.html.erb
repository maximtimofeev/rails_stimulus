<div class="flex w-full p-4">
  <%= form_with model: [:admin, @article], class: "flex flex-col gap-4" do |form| %>
    <div class="flex flex-col gap-4">
      <%= form.label 'Title'%>
      <%= form.text_field :title %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'Description'%>
      <%= form.text_area :description %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'Url'%>
      <%= form.text_field :url %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'SEO title'%>
      <%= form.text_field :seo_title %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'SEO description'%>
      <%= form.text_field :seo_description %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'Published'%>
      <%= form.check_box :published %>
    </div>
    <div class="flex flex-col gap-4">
      <%= form.label 'Content'%>
      <%= form.rich_text_area :content %>
    </div>
    <div class="flex w-full justify-center gap-4">
      <div class="flex">
      <%= component 'button', text: 'Save', type: :submit %>
      </div>
    </div>
  <% end %>
</div>