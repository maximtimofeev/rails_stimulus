<div class="flex flex-col w-full p-4 gap-8">
  <%= link_to 'New article', new_admin_article_path %>
  <div class="flex w-full">
    <%= component 'table', data: @articles do |table| %>
      <%= table.column('Title') do |article| %>
        <%= article.title %>
      <% end %>
      <%= table.column('Description') do |article| %>
        <%= article.description %>
      <% end %>
      <%= table.column('Created at') do |article| %>
        <%= article.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
      <% end %>
      <%= table.column('Actions', 180) do |article| %>
        <div class="flex items-center gap-4">
          <%= link_to 'Edit', edit_admin_article_path(article) %>
          <%= button_to 'Delete', "/admin/articles/#{article.id}", method: :delete %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>